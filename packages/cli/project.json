{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc"],
        "cwd": "packages/cli"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["ts-node src/index.ts"],
        "cwd": "packages/cli"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit"],
        "cwd": "packages/cli"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint ."],
        "cwd": "packages/cli"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint . --fix"],
        "cwd": "packages/cli"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx rimraf node_modules dist"],
        "cwd": "packages/cli"
      }
    }
  },
  "tags": ["type:cli", "platform:node"]
}
