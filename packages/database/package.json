{
  "name": "@magicappdev/database",
  "version": "0.0.1",
  "description": "Database utilities with Drizzle ORM for Cloudflare D1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "drizzle"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "generate": "drizzle-kit generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate:local": "wrangler d1 migrations apply magicappdev-db --local",
    "migrate:prod": "wrangler d1 migrations apply magicappdev-db --remote",
    "test": "vitest run"
  },
  "dependencies": {
    "@magicappdev/shared": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250116.0",
    "@types/node": "^25.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.53.1"
  }
}
