{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/database/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc"],
        "cwd": "packages/database"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["drizzle-kit generate"],
        "cwd": "packages/database"
      }
    },
    "migrate:local": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "wrangler d1 execute DB --local --file=./drizzle/migrations/migration.sql"
        ],
        "cwd": "packages/database"
      }
    },
    "migrate:prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "wrangler d1 execute DB --file=./drizzle/migrations/migration.sql"
        ],
        "cwd": "packages/database"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit"],
        "cwd": "packages/database"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint ."],
        "cwd": "packages/database"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint . --fix"],
        "cwd": "packages/database"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx rimraf node_modules dist"],
        "cwd": "packages/database"
      }
    }
  },
  "tags": ["type:database", "platform:cloudflare"]
}
