{
  "name": "@magicappdev/llmchat",
  "private": true,
  "description": "A simple chat application powered by Cloudflare Workers AI",
  "scripts": {
    "cf-typegen": "npx wrangler types",
    "check": "tsc --noEmit && npx wrangler deploy --dry-run",
    "deploy": "npx wrangler deploy -c wrangler.jsonc",
    "dev": "npx wrangler dev -c wrangler.jsonc --persist-to ../../.wrangler/state",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "start": "npx wrangler dev -c wrangler.jsonc --persist-to ../../.wrangler/state",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.12.10",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@magicappdev/database": "workspace:*",
    "@magicappdev/shared": "workspace:*",
    "@types/node": "25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "4.0.18",
    "wrangler": "^4.63.0"
  },
  "cloudflare": {
    "label": "LLM Chat App",
    "products": [
      "Workers",
      "Workers AI",
      "AI Gateway"
    ],
    "categories": [
      "ai"
    ],
    "docs_url": "https://developers.cloudflare.com/workers-ai/",
    "preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/a974bd55-20c6-4656-fa29-1551d43ddc00/public",
    "preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/65dd8441-89d3-491d-c5a1-0a000d070700/preview",
    "publish": true
  }
}
