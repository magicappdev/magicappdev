{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@magicappdev/shared": ["../shared/dist/index.d.ts"],
      "@magicappdev/database": ["../database/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../database"
    }
  ]
}
