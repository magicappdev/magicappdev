    "@cloudflare/workers-types": "^4.20260120.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^25.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17",
    "wrangler": "4.60.0"
