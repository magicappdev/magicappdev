{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc"],
        "cwd": "packages/api"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["wrangler deploy"],
        "cwd": "packages/api"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["wrangler dev"],
        "cwd": "packages/api"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit"],
        "cwd": "packages/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint ."],
        "cwd": "packages/api"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint . --fix"],
        "cwd": "packages/api"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx rimraf node_modules dist"],
        "cwd": "packages/api"
      }
    }
  },
  "tags": ["type:api", "platform:cloudflare"]
}
