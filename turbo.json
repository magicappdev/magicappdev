{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "cache": true
    },
    "build:api": {
      "dependsOn": ["@magicappdev/api#build"]
    },
    "build:cli": {
      "dependsOn": ["@magicappdev/cli#build"]
    },
    "build:db": {
      "dependsOn": ["@magicappdev/database#build"]
    },
    "build:shared": {
      "dependsOn": ["@magicappdev/shared#build"]
    },
    "build:web": {
      "dependsOn": ["@magicappdev/web#build"]
    },
    "build:agent": {
      "dependsOn": ["@magicappdev/agent#build"]
    },
    "build:llmchat": {
      "dependsOn": ["@magicappdev/llmchat#build"]
    },
    "build:templates": {
      "dependsOn": ["@magicappdev/templates#build"]
    },
    "build:axiom": {
      "dependsOn": ["@magicappdev/axiom-cloudflare-workers#build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": [],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": [],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*",
        "!node_modules/**",
        "!dist/**",
        "!.next/**",
        "!build/**"
      ],
      "outputs": ["tsconfig.tsbuildinfo"],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["build", "lint", "typecheck"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
