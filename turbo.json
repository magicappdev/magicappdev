{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "format", "typecheck", "lint"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": false
    },
    "build:api": {
      "dependsOn": ["@magicappdev/api#build"]
    },
    "build:cli": {
      "dependsOn": ["@magicappdev/cli#build"]
    },
    "build:db": {
      "dependsOn": ["@magicappdev/database#build"]
    },
    "build:mobile": {
      "dependsOn": ["@magicappdev/mobile#build"]
    },
    "build:shared": {
      "dependsOn": ["@magicappdev/shared#build"]
    },
    "build:web": {
      "dependsOn": ["@magicappdev/web#build"]
    },
    "build:agent": {
      "dependsOn": ["@magicappdev/agent#build"]
    },
    "build:llmchat": {
      "dependsOn": ["@magicappdev/llmchat#build"]
    },
    "build:templates": {
      "dependsOn": ["@magicappdev/templates#build"]
    },
    "build:axiom": {
      "dependsOn": ["@magicappdev/axiom-cloudflare-workers#build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "deploy": {
      "dependsOn": ["build", "lint", "typecheck"],
      "cache": false
    }
  }
}
